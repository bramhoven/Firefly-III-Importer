@model Luciferin.Website.Models.Settings.SettingsIndexPageModel

<div class="text-center">
    <h1 class="display-4 mb-5">Settings</h1>

    <h4 class="mb-3">Firefly III Settings</h4>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="input-firefly-url">Firefly III Url</span>
        </div>
        @Html.EditorFor(m => m.Settings.FireflyUrl.Value, new { htmlAttributes = new { @class = "form-control", placeholder = "Firefly III Url", aria_label = "Firefly III Url", aria_described_by = "input-firefly-url" } })
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="input-firefly-access-token">Firefly III Access Token</span>
        </div>
        @Html.TextAreaFor(m => m.Settings.FireflyAccessToken.Value, new { @class = "form-control", aria_label = "Firefly III Access Token", aria_described_by = "input-firefly-access-token" })
    </div>

    <h4 class="mb-3">Nordigen Settings</h4>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="input-nordigen-url">Nordigen Url</span>
        </div>
        @Html.EditorFor(m => m.Settings.NordigenBaseUrl.Value, new { htmlAttributes = new { @class = "form-control", placeholder = "Nordigen Url", aria_label = "Nordigen Url", aria_described_by = "input-nordigen-url" } })
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="input-nordigen-secret-id">Nordigen Secret ID</span>
        </div>
        @Html.EditorFor(m => m.Settings.NordigenSecretId.Value, new { htmlAttributes = new { @class = "form-control", placeholder = "Nordigen Secret ID", aria_label = "Nordigen Secret ID", aria_described_by = "input-nordigen-secret-id" } })
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="input-nordigen-secret-key">Nordigen Secret Key</span>
        </div>
        @Html.EditorFor(m => m.Settings.NordigenSecretKey.Value, new { htmlAttributes = new { @class = "form-control", placeholder = "Nordigen Secret Key", aria_label = "Nordigen Secret Key", aria_described_by = "input-nordigen-secret-key" } })
    </div>
    
    <h4 class="mb-3">Import Settings</h4>
    <div class="input-group boolean-input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="input-automatic-import">Automatic Import</span>
        </div>
        @Html.EditorFor(m => m.Settings.AutomaticImport, new { htmlAttributes = new { @class = "form-control", aria_label = "Automatic import", aria_described_by = "input-automatic-import" } })
    </div>
    
    <div class="input-group boolean-input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="input-extended-note">Extended notes</span>
        </div>
        @Html.EditorFor(m => m.Settings.ExtendedNotes, new { htmlAttributes = new { @class = "form-control", aria_label = "Extended notes", aria_described_by = "input-extended-notes" } })
    </div>
    
    <div class="input-group mb-5">
        <div class="input-group-prepend">
            <span class="input-group-text" id="input-import-days">Import days</span>
        </div>
        @Html.EditorFor(m => m.Settings.ImportDays.Value, new { htmlAttributes = new { @class = "form-control", aria_label = "Import days", aria_described_by = "input-import-days" } })
    </div>

    <button type="submit" class="btn btn-primary btn-block mb-5">Save</button>
</div>